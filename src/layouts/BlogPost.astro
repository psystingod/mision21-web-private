---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

// Aceptar props de blog O writings
type Props = {
	title: string;
	description: string;
	pubDate: Date;
	updatedDate?: Date;
	heroImage?: string;
	author?: string;
	language?: 'es' | 'en';
};

const { title, description, pubDate, updatedDate, heroImage, author } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			.hero-image {
				width: 100%;
				object-fit: cover;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
				object-fit: cover;
				height: 300px;
				max-width: 100%;
			}
			.prose {
				width: 100%;
				max-width: 720px;
				margin: 0 auto;
				padding: 1em 0;
				color: #e0e0e0;
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
				color: #fff;
			}
			.date {
				margin-bottom: 0.5em;
				color: #aaa;
			}
			.author-info {
				margin-top: 0.5em;
				color: var(--accent);
				font-style: italic;
				font-size: 0.95rem;
			}
			.last-updated-on {
				font-style: italic;
				margin-top: 0.5em;
			}

			/* Estilos para el contenido del art√≠culo */
			.prose :global(p) {
				margin-bottom: 1.5em;
				line-height: 1.8;
				color: #ccc;
			}

			.prose :global(h2),
			.prose :global(h3),
			.prose :global(h4) {
				color: #fff;
				margin-top: 2em;
				margin-bottom: 1em;
			}

			.prose :global(h2) {
				font-size: 1.8rem;
			}

			.prose :global(h3) {
				font-size: 1.5rem;
			}

			.prose :global(a) {
				color: var(--accent);
				text-decoration: underline;
			}

			.prose :global(strong) {
				color: #fff;
				font-weight: 700;
			}

			.prose :global(ul),
			.prose :global(ol) {
				margin-bottom: 1.5em;
				padding-left: 2em;
				color: #ccc;
			}

			.prose :global(li) {
				margin-bottom: 0.5em;
			}

			.prose :global(blockquote) {
				border-left: 4px solid var(--accent);
				padding-left: 1.5em;
				margin: 2em 0;
				font-style: italic;
				color: #fff;
			}

			.prose :global(code) {
				background: rgba(255, 255, 255, 0.1);
				padding: 0.2em 0.4em;
				border-radius: 4px;
				font-size: 0.9em;
				color: var(--accent);
			}

			.prose :global(pre) {
				background: rgba(255, 255, 255, 0.05);
				padding: 1.5em;
				border-radius: 8px;
				overflow-x: auto;
				margin: 2em 0;
			}

			.prose :global(pre code) {
				background: none;
				padding: 0;
				color: #e0e0e0;
			}

			@media (max-width: 900px) {
				.prose {
					padding: 1em 0.5em;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <img width="1020" height="510" src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						{author && <div class="author-info">By {author}</div>}
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>