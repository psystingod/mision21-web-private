---
import type { CollectionEntry } from 'astro:content';
import { getCollection, getEntry } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';

export async function getStaticPaths() {
	const allWritings = await getCollection('writings');
	const posts = allWritings.filter((post) => post.data.language === 'es');
	
	return posts.map((post) => ({
		params: { slug: post.slug },
	}));
}

// Obtener el post usando el slug de los params
const { slug } = Astro.params;

if (!slug) {
	throw new Error('No slug provided');
}

// Obtener el entry directamente
const post = await getEntry('writings', slug);

if (!post) {
	throw new Error(`No writing found for slug: ${slug}`);
}

const { Content } = await post.render();
---

<BlogPost {...post.data}>
	<Content />
</BlogPost>