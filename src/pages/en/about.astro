---
import Layout from '../../layouts/BlogPost.astro';
import { useTranslations } from '../../i18n/utils';

// Import images
import AboutHeroImage1 from '../../assets/members1.jpeg';
import AboutHeroImage2 from '../../assets/members2.jpeg';

// Configurar idioma
const lang = 'en';
const t = useTranslations(lang);
---

<Layout
    title={t('about.title')}
    description={t('about.description')}
    pubDate={new Date('January 05 2025')}
>

    <div class="hero-carousel-container">
        <div class="carousel-slide active fade">
            <img src={AboutHeroImage1.src} alt="Mission 21 Team" />
        </div>

        <div class="carousel-slide fade">
            <img src={AboutHeroImage2.src} alt="Mission 21 Community" />
        </div>
    </div>

    <section class="intro-section mobile-centered">
        <div class="mission-header">
            <h2>{t('about.history')}</h2>
            <div class="text-content">
                <p class="lead-text">
                    <strong>Mision 21</strong> {t('about.lead')}
                </p>
                <p>
                    {t('about.founder.text')}
                </p>
                <p>
                    {t('about.vision.text')}
                </p>
            </div>
        </div>

        <div class="pillars-container">
            <div class="pillar">
                <i class="fa-brands fa-bitcoin"></i>
                <h4>{t('about.pillar.bitcoin')}</h4>
            </div>
            <div class="pillar">
                <i class="fa-solid fa-cross"></i>
                <h4>{t('about.pillar.faith')}</h4>
            </div>
            <div class="pillar">
                <i class="fa-solid fa-futbol"></i>
                <h4>{t('about.pillar.sports')}</h4>
            </div>
        </div>
    </section>

    <hr class="divider" />

    <section class="team-section mobile-centered">
        <h2>{t('about.leadership')}</h2>
        <p class="team-intro">
            {t('about.team.intro')}
        </p>

        <h3 class="team-category">{t('about.board')}</h3>
        
        <div class="team-wrapper">
            <div class="team-card">
                <div class="card-content">
                    <h4>{t('team.satoshi')}</h4>
                    <span class="role">{t('role.cvo')}</span>
                    <p>
                        {t('desc.satoshi')}
                    </p>
                </div>
            </div>

            <div class="team-card">
                <div class="card-content">
                    <h4>{t('team.irvin')}</h4>
                    <span class="role">{t('role.coo')}</span>
                    <p>
                        {t('desc.irvin')}
                    </p>
                </div>
            </div>

            <div class="team-card">
                <div class="card-content">
                    <h4>{t('team.diego')}</h4>
                    <span class="role">{t('role.cto')}</span>
                    <p>
                        {t('desc.diego')}
                    </p>
                </div>
            </div>
        </div>

        <h3 class="team-category">{t('about.directors')}</h3>
        
        <div class="team-wrapper">
            <div class="team-card">
                <div class="card-content">
                    <h4>{t('team.maricela')}</h4>
                    <span class="role">{t('role.education')}</span>
                    <p>
                        {t('desc.maricela')}
                    </p>
                </div>
            </div>

            <div class="team-card">
                <div class="card-content">
                    <h4>{t('team.wiliams')}</h4>
                    <span class="role">{t('role.social')}</span>
                    <p>
                        {t('desc.wiliams')}
                    </p>
                </div>
            </div>

            <div class="team-card">
                <div class="card-content">
                    <h4>{t('team.antony')}</h4>
                    <span class="role">{t('role.media')}</span>
                    <p>
                        {t('desc.antony')}
                    </p>
                </div>
            </div>
        </div>
    </section>

    <hr class="divider" />

    <section class="volunteers-section mobile-centered">
        <div class="volunteer-box">
            <h3>{t('about.volunteers')}</h3>
            <p>
                {t('about.volunteers.desc')}
            </p>
        </div>
    </section>

</Layout>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        let slideIndex = 0;
        const slides = document.querySelectorAll(".carousel-slide");
        const intervalTime = 4000; 

        function showSlides() {
            if(slides.length === 0) return;
            slides.forEach(slide => slide.classList.remove("active"));
            slideIndex++;
            if (slideIndex > slides.length) { slideIndex = 1 }
            slides[slideIndex - 1].classList.add("active");
            setTimeout(showSlides, intervalTime); 
        }

        if (slides.length > 0) {
            setTimeout(showSlides, intervalTime);
        }
    });
</script>

<style>
    /* --- CAROUSEL --- */
    .hero-carousel-container {
        width: 100%;
        position: relative;
        height: 400px; 
        overflow: hidden;
        border-radius: 12px;
        margin-bottom: 3rem;
        box-shadow: 0 10px 30px rgba(0,0,0,0.4);
    }

    .carousel-slide {
        display: none;
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0; left: 0;
    }

    .carousel-slide.active { display: block; }

    .carousel-slide img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 12px;
    }

    .fade { animation: fade 1.5s; }
    @keyframes fade { from {opacity: 0.4} to {opacity: 1} }

    /* --- GENERAL TEXT STYLES --- */
    p {
        color: #ccc; 
        line-height: 1.8;
        margin-bottom: 1.5em;
        font-size: 1.05rem;
    }

    h2, h3, h4, strong { color: #fff; }

    h2 { font-size: 2.2rem; margin-bottom: 1.5rem; text-align: left; }

    .lead-text {
        font-size: 1.3em;
        color: #fff;
        margin-bottom: 1.5em;
        font-weight: 300;
    }

    .divider {
        border: 0;
        height: 1px;
        background: rgba(255, 255, 255, 0.1); 
        margin: 4rem 0;
    }

    /* --- PILLARS --- */
    .pillars-container {
        display: flex;
        justify-content: space-around;
        margin: 3rem 0;
        flex-wrap: wrap;
        gap: 2rem;
        text-align: center;
    }

    .pillar {
        flex: 1;
        min-width: 150px;
        padding: 1rem;
    }

    .pillar i {
        font-size: 3rem;
        color: #F7931A; 
        margin-bottom: 1rem;
        transition: transform 0.3s;
    }
    
    .pillar:hover i { transform: scale(1.1); }
    .pillar h4 { font-weight: 700; margin-top: 0.5rem; }

    /* --- TEAM --- */
    .team-section { margin-top: 2rem; }
    
    .team-intro {
        text-align: left; 
        max-width: 700px;
        margin-bottom: 3rem;
        color: #aaa;
        font-size: 1.1rem;
    }

    .team-category {
        color: #F7931A;
        border-bottom: 2px solid #F7931A;
        display: inline-block;
        margin-bottom: 2rem;
        margin-top: 1rem;
        padding-bottom: 0.5rem;
        font-size: 1.5rem;
        text-align: left;
    }

    .team-wrapper {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
        width: 100%;
    }

    .team-card {
        background: rgba(255, 255, 255, 0.03); 
        border: 1px solid rgba(255, 255, 255, 0.05);
        border-radius: 16px;
        padding: 2rem;
        transition: transform 0.3s ease, border-color 0.3s ease;
        box-sizing: border-box;
    }

    .team-card:hover {
        transform: translateY(-5px);
        border-color: #F7931A;
        background: rgba(255, 255, 255, 0.06);
    }

    .team-card h4 { margin: 0; font-size: 1.4rem; color: #fff; }

    .team-card .role {
        display: block;
        font-size: 0.85rem;
        color: #F7931A;
        font-weight: 700;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-top: 0.5rem;
    }

    .team-card p { font-size: 0.95rem; color: #ccc; margin: 0; }

    /* --- VOLUNTEERS --- */
    .volunteers-section {
        padding: 3rem 2rem;
        background: rgba(255, 255, 255, 0.02);
        border: 1px dashed rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        margin-top: 2rem;
        text-align: center;
    }
    .volunteers-section h3 { color: #F7931A; margin-bottom: 1rem; }
    .volunteer-box p { margin: 0 auto; max-width: 800px; }

    @media (max-width: 900px) {
        .mobile-centered h2, 
        .mobile-centered h3, 
        .mobile-centered p, 
        .mobile-centered .team-intro,
        .mobile-centered .team-category {
            text-align: center !important;
            margin-left: auto !important;
            margin-right: auto !important;
        }

        .team-wrapper {
            display: flex !important;
            flex-direction: column;
            align-items: center;
            width: 100%;
            padding: 0;
        }

        .team-card {
            text-align: center;
            width: 100%;
            max-width: 340px;
            margin-left: auto !important;
            margin-right: auto !important;
            margin-bottom: 2rem;
        }

        .pillars-container {
            flex-direction: column;
            align-items: center;
        }

        .hero-carousel-container {
            height: 250px;
        }
    }
</style>