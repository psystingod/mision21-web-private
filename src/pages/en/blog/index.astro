---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../../components/BaseHead.astro';
import Footer from '../../../components/Footer.astro';
import FormattedDate from '../../../components/FormattedDate.astro';
import Header from '../../../components/Header.astro';
import { SITE_TITLE } from '../../../consts';
import { useTranslations } from '../../../i18n/utils';

// Configurar idioma
const lang = 'en';
const t = useTranslations(lang);

// Obtener solo posts en inglés
const allPosts = await getCollection('blog');
const posts = allPosts
	.filter((post) => post.data.language === 'en')
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${t('blog.title')} - ${SITE_TITLE}`} description={t('blog.description')} />
		<style>
			/* No sobreescribir main, dejarlo como está en global.css */
			
			.listings-container {
				width: 100%;
				max-width: 960px;
				margin: 0 auto;
				padding: 0 1rem;
			}
			
			ul {
				display: grid;
				grid-template-columns: repeat(2, 1fr);
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			
			ul li {
				background: rgba(255, 255, 255, 0.03);
				border-radius: 12px;
				overflow: hidden;
				transition: transform 0.3s ease, box-shadow 0.3s ease;
			}
			
			ul li:hover {
				transform: translateY(-5px);
				box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
			}
			
			/* Primera card ocupa todo el ancho */
			ul li:first-child {
				grid-column: 1 / -1;
			}
			
			ul li a {
				display: block;
				text-decoration: none;
				color: inherit;
			}
			
			/* IMÁGENES */
			ul li img {
				width: 100%;
				height: 200px;
				object-fit: cover;
				display: block;
			}
			
			ul li:first-child img {
				height: 350px;
			}
			
			/* CONTENEDOR DE TEXTO */
			.post-content {
				padding: 1.5rem;
				text-align: center;
			}
			
			.title {
				margin: 0 0 0.75rem 0;
				color: #fff;
				line-height: 1.3;
				font-size: 1.2rem;
				font-weight: 700;
			}
			
			ul li:first-child .title {
				font-size: 2rem;
			}
			
			.date {
				margin: 0;
				color: #aaa;
				font-size: 0.9rem;
			}
			
			ul li a:hover .title {
				color: var(--accent);
			}
			
			.no-posts {
				text-align: center;
				padding: 4rem 2rem;
				color: #ccc;
				grid-column: 1 / -1;
			}
			
			/* TABLET */
			@media (max-width: 900px) {
				.listings-container {
					padding: 0 1.5rem;
				}
				
				ul {
					gap: 1.5rem;
				}
				
				ul li img {
					height: 180px;
				}
				
				ul li:first-child img {
					height: 250px;
				}
				
				.title {
					font-size: 1.1rem;
				}
				
				ul li:first-child .title {
					font-size: 1.6rem;
				}
			}
			
			/* MÓVIL */
			@media (max-width: 600px) {
				.listings-container {
					padding: 0 1rem;
				}
				
				ul {
					grid-template-columns: 1fr;
					gap: 1.5rem;
				}
				
				ul li:first-child {
					grid-column: 1;
				}
				
				ul li img,
				ul li:first-child img {
					height: 200px;
				}
				
				.post-content {
					padding: 1rem;
				}
				
				.title {
					font-size: 1.1rem;
				}
				
				ul li:first-child .title {
					font-size: 1.4rem;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="listings-container">
				<section>
					{posts.length === 0 ? (
						<ul>
							<div class="no-posts">
								<p>{t('blog.noPosts')}</p>
							</div>
						</ul>
					) : (
						<ul>
							{posts.map((post) => (
								<li>
									<a href={`/en/blog/${post.id}/`}>
										{post.data.heroImage && (
											<img src={post.data.heroImage} alt={post.data.title} />
										)}
										<div class="post-content">
											<h4 class="title">{post.data.title}</h4>
											<p class="date">
												<FormattedDate date={post.data.pubDate} />
											</p>
										</div>
									</a>
								</li>
							))}
						</ul>
					)}
				</section>
			</div>
		</main>
		<Footer />
	</body>
</html>